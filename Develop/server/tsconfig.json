{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,

      "outDir": "dist",
      "rootDir": "src"
    },
    "include": ["src"],
    "exclude": ["dist"],
    "typeRoots": ["./node_modules/@types", "./src/types"]
}
